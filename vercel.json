{
  "functions": {
    "api/daily-news.js": {
      "maxDuration": 300
    },
    "api/trigger.js": {
      "maxDuration": 300
    },
    "api/test.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/daily-news",
      "schedule": "0 4 * * *"
    }
  ],
  "public": true,
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "*" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/test"
    }
  ]
}